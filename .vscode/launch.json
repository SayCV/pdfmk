    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                //"--inspect",
                "--inspect-brk",
                "--no-check=remote",
                "--allow-all",
                "--unstable",
                "${fileBasename}",
                "sample/input.md",
                "sample/input.gen.pdf",
            ],
            "outputCapture": "std",
            "attachSimplePort": 9229,
            "env": {
                "CHROME_PATH": "${env:SCOOP}/apps/chrome-cvp/current/Programs/Chrome/chrome.exe",
            },
        }
    ]
}